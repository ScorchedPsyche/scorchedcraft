{
  "schemaVersion": 1,
  "id": "scorchedcraft-core",
  "version": "${version}",

  "name": "ScorchedCraft - Core",
  "description": "Library for all other mods of this suite.",
  "authors": [
    "ScorchedPsyche"
  ],
  "contact": {
    "homepage": "https://github.com/ScorchedPsyche/",
    "sources": "https://github.com/ScorchedPsyche/scorchedcraft"
  },

  "license": "Apache-2.0",
  "icon": "assets/scorchedcraft-core/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.scorchedpsyche.scorchedcraft.fabric.core.Core"
    ],
    "server": [
      "com.github.scorchedpsyche.scorchedcraft.fabric.core.CoreServer"
    ]
  },
  "mixins": [
    "scorchedcraft-core.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
