{
  "schemaVersion": 1,
  "id": "scorchedcraft-sleep",
  "version": "${version}",

  "name": "ScorchedCraft - SLEEP",
  "description": "Multiplayer sleep mod that allows for 1 player sleep and night reservation. Supports multi-dimensions/world",
  "authors": [
    "ScorchedPsyche"
  ],
  "contact": {
    "homepage": "https://github.com/ScorchedPsyche/",
    "sources": "https://github.com/ScorchedPsyche/scorchedcraft"
  },

  "license": "Apache-2.0",
  "icon": "assets/scorchedcraft-sleep/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.scorchedpsyche.scorchedcraft.fabric.sleep.Sleep"
    ]
  },
  "mixins": [
    "scorchedcraft-sleep.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": ">=1.18-alpha.21.43.a",
    "java": ">=16",

    "scorchedcraft-core": ">=0.0.1"
  },
  "suggests": {
    "another-mod": "*"
  }
}
